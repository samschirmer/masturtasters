<table style="display: inline-block">
	<tr>
		<td>Category</td>
		<td>Master</td>
		<td>Avg Rating</td>
		<td>Date</td>
	</tr>
	<% @categories.each do |category| %>
		<tr>
			<td class="center"><a href='categories/<%= category.id %>'><%= category.name %></a></td>
			<td class="center"><a href='humans/<%= category.master_id %>'><%= category.master %></a></td>
			<td class="center"><%= category.avg_rating.round(2) %></td>
			<td class="center"><%= category.date_tasted.strftime("%m-%d-%Y") %></td>
		</tr>
	<% end %>
</table>

<table style="display: inline-block">
	<tr>
		<td>Name</td>
	</tr>
	
	<% @humans.each do |human| %>
		<tr>
			<td class="center"><a href='humans/<%= human.id %>'><%= human.first_name %> <%= human.last_name %></a></td>
		</tr>
	<% end %>
</table>
